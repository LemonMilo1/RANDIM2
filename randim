from PIL import Image
import random

alpha="abcdefghijklmnopqrstuvwxyz. ,_"
# Liste de caractères de l'alphabet
alphabet = "abcdefghijklmnopqrstuvwxyz. ,_"

# Liste de nombres de 1 à 26 (longueur de l'alphabet)
nombres = list(range(0,len(alphabet)))

# Mélanger la liste de nombres
random.shuffle(nombres)

# Mélanger la liste de caractères selon l'ordre donné dans la liste "nombres"
resultat = ''.join([caractere for _, caractere in sorted(zip(nombres, alphabet), key=lambda x: random.random())])

# Afficher la liste mélangée de nombres
print("Liste de nombres mélangée :", nombres)

# Afficher la liste de caractères de l'alphabet arrangée de manière désordonnée
print("Liste de caractères de l'alphabet arrangée de manière désordonnée :", resultat)


alphabet=resultat

message="bonjour"
modulo=40

def encoded_color(s):
    b=0
    for i in range(len(alphabet)) :
        if alphabet[i] == s:
            b=i
    return (b,b,b)

def generate_random_color():
    o=random.randint(0, 255)
    p=random.randint(0, 255)
    while p == o:
        p=random.randint(0, 255)
    m=random.randint(0, 255)
    while m == p:
        m=random.randint(0, 255)
    return (o,p,m)

def generate_random_image(width, height, mess, mod):
    c=0
    image = Image.new("RGB", (width, height))
    a=0
    for y in range(height):
        a+=1
        for x in range(width):
            a+=1
            if c>=len(message):
                color = generate_random_color()
            else:
                if a%mod==0:
                    color = encoded_color(mess[c])
                    c+=1
                else:
                    color = generate_random_color()
            image.putpixel((x, y), color)
        a=a%modulo
    return image



def main():
    width, height = 100, 100
    image = generate_random_image(width, height, message, modulo)
    image.save("random_image.png")
    print("Image générée avec succès.")

if __name__ == "__main__":
    main()
    
with Image.open("random_image.png") as im:
    im.rotate(0).show()
    
print(resultat)
