from PIL import Image
import random

# Liste de caractères de l'alphabet
alphabet = "abcdefghijklmnopqrstuvwxyz. ,_"

def melanger_alphabet_selon_cle(cle,alphabet):
    alphabet = list(alphabet)
    random.seed(cle)  # Initialiser la graine pour assurer la reproductibilité
    random.shuffle(alphabet)
    return ''.join(alphabet)


message="bonjour"
cle="mabite"
modulo=40
alphabet= melanger_alphabet_selon_cle(cle,alphabet)
print(alphabet)

def encoded_color(s):
    b=0
    for i in range(len(alphabet)) :
        if alphabet[i] == s:
            b=i
    return (b,b,b)

def generate_random_color():
    o=random.randint(0, 255)
    p=random.randint(0, 255)
    while p == o:
        p=random.randint(0, 255)
    m=random.randint(0, 255)
    while m == p:
        m=random.randint(0, 255)
    return (o,p,m)

def generate_random_image(width, height, mess, mod):
    c=0
    image = Image.new("RGB", (width, height))
    a=0
    for y in range(height):
        a+=1
        for x in range(width):
            a+=1
            if c>=len(message):
                color = generate_random_color()
            else:
                if a%mod==0:
                    color = encoded_color(mess[c])
                    c+=1
                else:
                    color = generate_random_color()
            image.putpixel((x, y), color)
        a=a%modulo
    return image



def main():
    width, height = 100, 100
    image = generate_random_image(width, height, message, modulo)
    image.save("random_image.png")
    print("Image générée avec succès.")

if __name__ == "__main__":
    main()
    
with Image.open("random_image.png") as im:
    im.rotate(0).show()
    
